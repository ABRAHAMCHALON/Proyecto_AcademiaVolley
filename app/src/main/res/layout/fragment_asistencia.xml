<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.asistencia.AsistenciaFragment"
    android:padding="24dp">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardGrupoA"
        android:layout_width="0dp"
        android:layout_height="120dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="4dp"
        app:strokeColor="@android:color/black"
        app:strokeWidth="1dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Grupo A:\nLunes - Miércoles - Viernes"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@android:color/black" />
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardGrupoB"
        android:layout_width="0dp"
        android:layout_height="120dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="4dp"
        app:strokeColor="@android:color/black"
        app:strokeWidth="1dp"
        app:layout_constraintTop_toBottomOf="@id/cardGrupoA"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Grupo B:\nMartes - Jueves - Sábado"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@android:color/black" />
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardGrupoC"
        android:layout_width="0dp"
        android:layout_height="120dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="4dp"
        app:strokeColor="@android:color/black"
        app:strokeWidth="1dp"
        app:layout_constraintTop_toBottomOf="@id/cardGrupoB"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Grupo C:\nDomingo"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@android:color/black" />
    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>
